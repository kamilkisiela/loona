{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "dom", "esnext"],
    "declaration": true,
    "rootDir": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "../../node_modules/@types/",
      "node_modules/@types/"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/files/**", "tests/**", "**/node_modules/**"]
}