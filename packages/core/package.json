{
  "name": "@loona/core",
  "version": "1.0.0-alpha.7",
  "description": "App State Management done with GraphQL (core package)",
  "author": "Kamil Kisiela <kamil.kisiela@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "main": "build/bundles/loona.core.umd.js",
  "module": "build/fesm5/loona.core.js",
  "typings": "build/loona.core.d.ts",
  "repository": {
    "type": "git",
    "url": "kamilkisiela/loona"
  },
  "keywords": [
    "loona",
    "apollo",
    "graphql",
    "redux",
    "state",
    "state-management"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "build": "ng-packagr -p ng-package.json",
    "clean": "rimraf build/",
    "prebuild": "yarn clean",
    "deploy": "yarn build && npm publish build",
    "deploy:canary": "yarn build && npm publish build --tag canary"
  },
  "peerDependencies": {
    "apollo-cache": "^1.0.0",
    "apollo-client": "^2.0.0",
    "apollo-link": "^1.0.0",
    "graphql": "^0.13.2"
  },
  "dependencies": {
    "apollo-link-state-lazy": "~0.5.0",
    "immer": "~1.3.1"
  },
  "devDependencies": {
    "@types/jest": "23.3.2",
    "apollo-cache": "1.1.16",
    "apollo-client": "2.4.1",
    "apollo-link": "1.2.2",
    "apollo-cache-inmemory": "1.2.9",
    "graphql": "0.13.2",
    "graphql-tag": "2.9.2",
    "jest": "23.5.0",
    "ng-packagr": "4.1.1",
    "rimraf": "2.6.2",
    "ts-jest": "23.1.4",
    "typescript": "2.9.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.+(spec.ts)"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
