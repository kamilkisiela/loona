{
  "name": "loona-monorepo",
  "private": true,
  "dependencies": {
    "lerna": "^2.11.0"
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna clean",
    "prettier": "prettier --write **/{src,tests}/**/*.{ts,graphql}",
    "size": "bundlesize",
    "examples:build": "yarn example:todos:build && yarn example:games:build && yarn example:lazy:build",
    "example:todos": "ng run todos:serve",
    "example:todos:build": "ng run todos:build:production",
    "example:games": "ng run games:serve",
    "example:games:build": "ng run games:build:production",
    "example:lazy": "ng run lazy:serve",
    "example:lazy:build": "ng run lazy:build:production",
    "precommit": "lint-staged"
  },
  "workspaces": {
    "packages": [
      "packages/core",
      "packages/angular",
      "packages/react"
    ],
    "nohoist": [
      "examples-games/tachyons"
    ]
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.7.5",
    "@angular/animations": "6.1.6",
    "@angular/cdk": "6.3.1",
    "@angular/cli": "6.1.5",
    "@angular/common": "6.1.6",
    "@angular/compiler": "6.1.6",
    "@angular/compiler-cli": "6.1.6",
    "@angular/core": "6.1.6",
    "@angular/forms": "6.1.6",
    "@angular/http": "6.1.6",
    "@angular/language-service": "6.1.6",
    "@angular/material": "6.3.1",
    "@angular/platform-browser": "6.1.6",
    "@angular/platform-browser-dynamic": "6.1.6",
    "@angular/router": "6.1.6",
    "@types/node": "8.9.4",
    "apollo-angular": "1.2.0",
    "apollo-angular-link-http": "1.2.0",
    "apollo-cache-inmemory": "1.2.9",
    "apollo-client": "2.4.1",
    "apollo-link": "1.2.2",
    "bundlesize": "0.17.0",
    "codelyzer": "4.2.1",
    "core-js": "2.5.7",
    "graphql": "0.13.2",
    "graphql-tag": "2.9.2",
    "husky": "0.14.3",
    "lint-staged": "7.2.2",
    "prettier": "1.14.2",
    "rxjs": "6.3.1",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "typescript": "2.9.2",
    "zone.js": "0.8.26"
  },
  "lint-staged": {
    "**/{src,tests}/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "bundlesize": [{
      "path": "./packages/core/build/bundles/loona.core.umd.min.js",
      "maxSize": "2.5 kB"
    },
    {
      "path": "./packages/angular/build/bundles/loona.angular.umd.min.js",
      "maxSize": "3.5 kB"
    }
  ]
}